<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ViewWords">

    <ImageView
            android:id="@+id/im_logo"
            android:layout_alignParentTop="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"

    />

    <TextView
            android:id="@+id/uw_heading"
            android:text="Word Meaning"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:layout_below="@id/im_logo"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />


    <TextView
        android:id="@+id/VW_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:padding="15dp"
        android:text="Title"
        android:textSize="30sp" />

    <TextView
            android:id="@+id/VW_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/VW_title"
            android:text="Word Meaning"
            android:textSize="18sp"
            android:background="@drawable/shape"
            android:padding="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_below="@id/VW_meaning">

        <Button

                android:id="@+id/bt_VW_edit"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:text="Edit"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="20dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edge_button_blue"
                android:layout_marginTop="20dp"
        />

        <Button
                android:id="@+id/bt_VW_delete"
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_marginStart="10dp"
                android:text="Delete"
                android:layout_marginEnd="20dp"
                android:textAllCaps="false"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:background="@drawable/round_edge_button"
                android:layout_marginTop="20dp"
        />

    </LinearLayout>





</RelativeLayout>