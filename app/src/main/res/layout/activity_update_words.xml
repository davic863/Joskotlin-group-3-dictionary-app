<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".AddWord">

    <ImageView
            android:id="@+id/im_logo"
            android:layout_alignParentTop="true"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/logo"
            android:layout_marginTop="20dp"
            android:layout_centerInParent="true"

    />

    <TextView
            android:id="@+id/uw_heading"
            android:text="Update Word"
            android:gravity="center"
            android:layout_marginTop="15dp"
            android:textStyle="bold|italic"
            android:textSize="18sp"
            android:layout_below="@id/im_logo"
            android:textColor="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    />


    <EditText
            android:id="@+id/Uw_new_word"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/uw_heading"
            android:layout_marginTop="50dp"
            android:hint="Title"
            android:padding="15dp"
            android:background="@drawable/shape"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="20dp"
            android:inputType="textMultiLine"
    />

    <EditText
            android:id="@+id/UW_wrd_meaning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/Uw_new_word"
            android:hint="Word Meaning"
            android:background="@drawable/shape"
            android:padding="15dp"
            android:layout_marginEnd="20dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:inputType="textMultiLine"
    />

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_below="@id/UW_wrd_meaning">

            <Button

                    android:id="@+id/bt_Update"
                    android:layout_width="0dp"
                    android:layout_weight="50"
                    android:layout_centerInParent="true"
                    android:text="Update"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="20dp"
                    android:textAllCaps="false"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_edge_button_blue"
                    android:layout_below="@id/UW_wrd_meaning"
                    android:layout_marginTop="20dp"
            />



    </LinearLayout>

</RelativeLayout>